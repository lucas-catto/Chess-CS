
@model List<Players>

@{
    ViewData["Title"] = "Home Page";
}

<head>
     <link rel="stylesheet" href="~/css/Index/index.css">
</head>

@foreach (var player in Model) {

    @if (player.Player_Id % 2 != 0) {

        <div class="card black">
            
            <img src="~/@player.Image">

            <h2>@player.Name</h2>

            <div class="dates">
                <p>@player.YearBorn</p>
                <p>-</p>
                <p>@player.YearDied</p>
            </div>
        </div>
    }
    else {
        <div class="card white">
            
            <img src="~/@player.Image">

            <h2>@player.Name</h2>
            
            <div class="dates">
                <p>@player.YearBorn</p>
                <p>-</p>
                <p>@player.YearDied</p>
            </div>
        </div>
    }

    @* foreach (var year in player.Activity) {
        <p></p>
    } *@
}
